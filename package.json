{
	"name": "open-voucher",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"convex": "^1.29.3"
		}
	},
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @open-voucher/backend dev",
		"dev:setup": "turbo -F @open-voucher/backend dev:setup",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"deploy:web": "turbo -F web deploy",
		"deploy:backend": "turbo -F @open-voucher/backend deploy",
		"deploy:all": "turbo deploy"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"turbo": "^2.5.4"
	},
	"packageManager": "bun@1.2.19"
}
